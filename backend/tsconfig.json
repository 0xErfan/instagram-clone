{
    "compilerOptions": {
        "module": "CommonJS",
        "rootDir": "./src",
        "outDir": "./dist",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "target": "ES6",
        "strict": true,
        "skipLibCheck": true,
        "allowSyntheticDefaultImports": true
    },
    "include": [ "src/**/*" ],
    "exclude": [ "node_modules", "../frontend/**/*" ]
}